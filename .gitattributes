# Track common vendored artifact types with Git LFS (optional)
media-pack/player/*.js             filter=lfs diff=lfs merge=lfs -text

media-pack/player/*.css            filter=lfs diff=lfs merge=lfs -text
media-pack/player/*.json           filter=lfs diff=lfs merge=lfs -text
media-pack/player/*.zip            filter=lfs diff=lfs merge=lfs -text
media-pack/player/*.tar.gz         filter=lfs diff=lfs merge=lfs -text

# assets (recursive)
media-pack/assets/**/*.cast.gz     filter=lfs diff=lfs merge=lfs -text
media-pack/assets/**/*.mp4         filter=lfs diff=lfs merge=lfs -text
media-pack/assets/**/*.webm        filter=lfs diff=lfs merge=lfs -text
media-pack/assets/**/*.mp3         filter=lfs diff=lfs merge=lfs -text
media-pack/assets/**/*.png         filter=lfs diff=lfs merge=lfs -text
media-pack/assets/**/*.jpg         filter=lfs diff=lfs merge=lfs -text
media-pack/assets/**/*.gif         filter=lfs diff=lfs merge=lfs -text

# optional: artifacts/ as well if you keep large generated files there
artifacts/**/*.mp4                 filter=lfs diff=lfs merge=lfs -text
artifacts/**/*.png                 filter=lfs diff=lfs merge=lfs -text
artifacts/**/*.webm                filter=lfs diff=lfs merge=lfs -text
  
 
 